Package: vivainsights
Type: Package
Title: Analyze and Visualize Data from 'Microsoft Viva Insights'
Version: 0.5.1
Authors@R: c(
    person(given = "Martin", family = "Chan", role = c("aut", "cre"), email = "martin.chan@microsoft.com"),
